{% extends "_layouts/cp" %}

{% block actionButton %}
    <div class="btngroup">
        <a class="btn submit" href="{{ cpUrl(pluginHandle ~ '/metadata/my-provider') }}">Edit My Provider</a>
        <div class="btn submit menubtn"></div>
        <div class="menu">
            <ul>
                <li><a class="add icon"
                       href="{{ cpUrl(pluginHandle ~ '/metadata/new') }}">{{ "Add Remote Provider"|t('app') }}</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}

{#{% block sidebar %}#}
    {#{% include templateIndex ~ '/_cp/_components/nav.twig' with {#}
        {#pluginHandle: pluginHandle,#}
        {#sel: 'metadata'#}
    {#} %}#}
{#{% endblock %}#}

{% block content %}
    <div class="elements">
        <div class="tableview">
            <table class="data fullwidth">
                <thead>
                <tr>
                    <td scope="col" data-attribute="entityid">EntityId</td>
                    <td scope="col" data-attribute="type">Type</td>
                    <td scope="col" data-attribute="dateCreated">Date Created</td>
                    <td scope="col" data-attribute="dateUpdated">Date Updated</td>
                </tr>
                </thead>
                <tbody>
                {% for provider in providers %}
                    <tr data-id="">
                        <td data-title="entityid">
                            <div class="element small hasstatus "
                                 data-status="active"
                                    {% if myProvider and myProvider.id == provider.id %}
                                        data-url="{{ cpUrl(pluginHandle ~ '/metadata/my-provider') }}"
                                    {% else %}
                                        data-url="{{ cpUrl(pluginHandle ~ '/metadata/' ~ provider.id) }}"
                                    {% endif %}
                                 data-level="" data-editable="">
                                <span class="status {% if provider.enabled %}active{% else %}inactive{% endif %}"></span>
                                <div class="label">
                                    <span class="title">
                                        <a
                                                {% if myProvider and myProvider.id == provider.id %}
                                                    href="{{ cpUrl(pluginHandle ~ '/metadata/my-provider') }}"
                                                {% else %}
                                                    href="{{ cpUrl(pluginHandle ~ '/metadata/' ~ provider.id) }}"
                                                {% endif %}
                                        >{{ provider.entityId }}
                                        </a>
                                        {% if myProvider and myProvider.id == provider.id %}
                                            (My Provider)
                                        {% endif %}
                                    </span>
                                </div>
                            </div>
                        </td>
                        <td data-title="Type">{{ provider.type }}</td>
                        <td data-title="Date Created">{{ provider.dateCreated|date }}</td>
                        <td data-title="Date Updated">{{ provider.dateUpdated|date }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
