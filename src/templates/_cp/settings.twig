    {{ redirectInput(baseCpPath) }}

    <div class="readable">
        <h2>Settings</h2>
    </div>
    {{ forms.textField({
        label: "Default Entity ID"|t(plugin.handle ),
        name:'entityId',
        id:'entityId',
        instructions: "Entity ID for this system.",
        value: settings.entityId,
    }) }}
{% endblock %}
